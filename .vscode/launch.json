    "version": "0.2.0",
    "configurations": [
	{
		"name": "(gdb) Attach",
		"type": "cppdbg",
		"request": "attach",
		"program": "enter program name, for example ${workspaceFolder}/a.out",
		"MIMode": "gdb",
		"setupCommands": [
		    {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		    },
		    {
			"description": "Set Disassembly Flavor to Intel",
			"text": "-gdb-set disassembly-flavor intel",
			"ignoreFailures": true
		    }
		]
	},

        {
            "name": "Dagger (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/dagger",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Meson: Build Unix"
        },
        {
            "name": "Dagger (Windows)",
