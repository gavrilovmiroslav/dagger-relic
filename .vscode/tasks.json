{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Meson: Build Unix",
            "type": "shell",
            "group": "build",
            "command": "meson setup builddir && meson compile -C builddir"
        },
        {
            "label": "Meson: Build Windows",
            "type": "shell",
            "group": "build",
            "options":
            {
                "env": {
                    "CC": "cl",
                    "CXX": "cl"
                }
            },
            "command": "cmd.exe",
            "args":
            [
                "/d",
                "/c",
                "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat",
                "'&'",
                "meson",
                "setup",
                "builddir",
                "'&'",
                "meson",
                "compile",
                "-C",
                "builddir"
            ]
        }
    ]
}